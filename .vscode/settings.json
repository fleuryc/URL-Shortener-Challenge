{
  "python.pythonPath": "env/bin/python",
  "python.linting.flake8Enabled": true,
  "python.linting.enabled": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/__pycache__/**": true,
    "**/venv/**": true,
    "**/env/**": true,
    "**/.ipynb_checkpoints/**": true,
    "**/.mypy_cache/**": true,
    "**/.pytest_cache/**": true
  },
  "sqltools.useNodeRuntime": true,
  "sqltools.connections": [
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "Short",
      "database": "${workspaceFolder:em-test-clement-fleury}/data/database.db"
    },
    {
      "previewLimit": 50,
      "driver": "SQLite",
      "name": "Test",
      "database": "${workspaceFolder:em-test-clement-fleury}/data/test.db"
    }
  ]
}
